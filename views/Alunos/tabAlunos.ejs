<section>
    <div class="header">
    <%- include('../Partials/header') %>
</div>

<div class="container">
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>CPF</th>
                <th>GÃªnero</th>
                <th>Senha</th>
            </tr>
        </thead>
        <tbody>
            <% if (alunos.length === 0) { %>
                <tr>
                    <td>Nenhum aluno matriculado.</td>
                </tr>
            <% } else { %>
                <% alunos.forEach(aluno => { %>
                    <tr>
                        <td><%= aluno.id %></td>
                        <td><%= aluno.nome %></td>
                        <td><%= aluno.email %></td>
                        <td><%= aluno.telefone %></td>
                        <td><%= aluno.cpf %></td>
                        <td><%= aluno.genero %></td>
                        <td> <%= aluno.senha %></td>

                        <td>
                            <a href="/deletar/<%= aluno.id %>" id="btn-edit" class="delete">Deletar</a>
                            <a href="/atualizar/<%= aluno.id %>" id="btn-edit" class="edit">Editar</a>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>
</section>

